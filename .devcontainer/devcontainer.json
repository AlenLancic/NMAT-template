{
  "name": "Numerical Math Course",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "-github.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "github.copilot.editor.suggestions.enabled": false,
        "github.copilot.chat.visible": false,
        "github.copilot.inlineSuggest.enable": false,
        "workbench.panel.defaultLocation": "bottom",
        "workbench.view.copilot.chat.enabled": false,
        "workbench.activityBar.visible": true,
        "workbench.view.extension.copilot-chat-view.visible": false,
        "chat.disableAIFeatures": true,
        "python.analysis.extraPaths": ["/usr/local/lib/python3.12/site-packages"],
        "python.analysis.diagnosticSeverityOverrides": {
            "reportMissingImports": "none"
        }
      }
    }
  },
  "postCreateCommand": "pip install -r requirements.txt"
}
